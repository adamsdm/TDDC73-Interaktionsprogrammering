<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.accountregistration.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/small"
            android:scaleType="centerCrop"/>

        <com.example.adam.accountregistration.AccountRegistration
            android:id="@+id/accountRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.example.adam.accountregistration.AccountRegistration>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>



